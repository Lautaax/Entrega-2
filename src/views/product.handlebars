<div id="app">
  <h1 id="productId">Detalles del producto
    {{product.title}}</h1>
  <input style='visibility: hidden' type="text" name="cid" id="cid" value={{user.cart}} />
  <h2 style='display:none'>{{user.cart}}</h2>
  <input style='visibility: hidden' type="text" name="pid" id="pid" value={{product._id}} >
  <div id="productDetail" class="">
    <div id="product-{{product._id}}">
      <div>
        {{#each product.thumbnails}}
        <img src="{{this}}" alt="product image" />
        {{/each}}
      </div>
      <div>
        <h5 id="title">{{product.title}}</h5>
        <p>Descripcion:
          {{product.description}}</p>
        <p>Categoria:
          {{product.category}}</p>
        <p id="stock">Stock:
          {{product.stock}}</p>
        <p>Codigo:
          {{product.code}}</p>

        <div>
          <p>${{product.price}}</p>
          <button id="botonForm">Agregar al carrito </button>
        </div>
      </div>
    </div>
    <a href="/products"><button>Volver</button></a>
  </div>
</div>
